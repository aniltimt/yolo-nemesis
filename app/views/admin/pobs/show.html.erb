<link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.4/leaflet.css" />
<!--[if lte IE 8]>
  <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.4/leaflet.ie.css" />
<![endif]-->

<script src="http://cdn.leafletjs.com/leaflet-0.4/leaflet.js"></script>

<div style="float:left;width:420px">
  <div class="row">
    <div class="span2">Name</div>
    <div class="span2"><%= @pob.name %></div>
  </div>

  <div class="row">
    <div class="span2">Country</div>
    <div class="span2"><%= @pob.country %></div>
  </div>

  <div class="row">
    <div class="span2">City</div>
    <div class="span2"><%= @pob.city %></div>
  </div>

  <div class="row">
    <div class="span2">Address</div>
    <div class="span2"><%= @pob.address %></div>
  </div>

  <div class="row">
    <div class="span2">Description</div>
    <div class="span2"><%= @pob.description %></div>
  </div>

  <div class="row">
    <div class="span2">Categories</div>
    <div class="span2"><%= @pob.pob_categories.map{|c| c.name}.join(', ') %></div>
  </div>

  <div class="row">
    <div class="span2">Longitude</div>
    <div class="span2"><%= @pob.longitude %></div>
  </div>

  <div class="row">
    <div class="span2">Latitude</div>
    <div class="span2"><%= @pob.latitude %></div>
  </div>

  <input type="hidden" id="pob_longitude" value="<%= @pob.longitude %>"/>
  <input type="hidden" id="pob_latitude" value="<%= @pob.latitude %>"/>

  <% if !@pob.icon.blank? %>
  <div class="row">
    <div class="span2">Icon</div>
    <div class="span2"><%= image_tag(@pob.icon_url) %></div>
  </div>
  <% end %>

  <% if @pob.pob_images.any? %>
    <% @pob.pob_images.each_with_index do |pob_image, i| %>
    <div class="row">
      <div class="span2">Pob Image #<%=(i+1)%></div>
      <div class="span2"><%= image_tag(pob_image.image_url) %></div>
    </div>
    <% end %>
  <% end %>

  <%= link_to "Edit", edit_admin_pob_path(@pob), :class => "btn btn-primary" %>
  <%= link_to "Manage coupons", admin_pob_coupons_path(@pob), :class => "btn btn-success" %>
  <%= link_to "Manage banners", admin_pob_banners_path(@pob), :class => "btn btn-success" %>
  <%= link_to "Delete", admin_pob_path(@pob), :method => :delete, :confirm => "Are you sure you want to delete this POB?", :class => "btn btn-danger" %>
</div>

<div id="leaflet_map"></div>
