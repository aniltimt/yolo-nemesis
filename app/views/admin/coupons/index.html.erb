<ul class="breadcrumb">
  <li>
    <a href="/admin">Dashboard</a>
    <span class="divider">/</span>
  </li>
  <li class="active">
    <%= link_to @pob.name, admin_pob_path(@pob) %>
    <span class="divider">/</span>
  </li>
  <li class="active">Coupons</li>
</ul>
<div style="float:right">
  <%= link_to "Create new coupon", new_admin_pob_coupon_path, :class => "btn btn-primary" %>
</div>
<div class="left">
  <table class="table table-striped">
    <thead>
      <th>#</th>
      <th>Name</th>
      <th width="150px">Action</th>
    </thead>
    <tbody>
      <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.id %></td>
        <td><%= link_to coupon.name, edit_admin_pob_coupon_path(@pob, coupon) %></td>
        <td>
          <%= link_to "Edit", edit_admin_pob_coupon_path(@pob, coupon), :class => "btn btn-info" %>
          <%= link_to "Delete", admin_pob_coupon_path(@pob, coupon), :method => :delete, :confirm => "Are you sure you want to delete this coupon?", :class => "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @coupons %>
</div>
